/* pages/video/video.wxss */

.video-wrap{
  display: flex;
  justify-content: center;
}
.cover-wrap{
  width: 100%;
  height: 100%;
  position: relative;
}
.cover-wrap .video-image{
  width: 100%;
  height: 100%;
}
.play{
  border-left: 30rpx solid #fff;
  border-right: 0 solid transparent;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  margin-top: 10rpx;
}
.play-wrap{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  background-color: #333;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.time{
  font-size: 34rpx;
  color: #fff;
}